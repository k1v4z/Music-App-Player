<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/background"
    tools:context=".presenter.editpresenter.EditActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:textColor="#F8F8F4"/>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/player"/>

        <ImageButton
            android:id="@+id/imageBtnAddImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circleImageView"
            android:layout_alignEnd="@id/circleImageView"
            android:layout_marginTop="-30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/addimage" />
    </RelativeLayout>


    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:ems="10"
        android:drawableStart="@drawable/account"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:textColorHint="@color/white"
        android:background="@drawable/custom_view"
        android:text=""/>

    <EditText
        android:id="@+id/edtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:drawableStart="@drawable/day"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:ems="10"
        android:textColorHint="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_view"
        android:inputType="date" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_margin="30dp"
        android:textStyle="bold"
        android:text="Cập nhật"
        android:gravity="center"/>
</LinearLayout>